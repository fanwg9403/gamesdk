<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/fs_v_outside"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_weight="90"
        app:layout_constraintStart_toEndOf="@id/fs_message_root" />

    <View
        android:id="@+id/fs_v_top_safe_area_2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/fs_activity_bg"
        app:layout_constraintBottom_toBottomOf="@id/fs_v_top_safe_area"
        app:layout_constraintEnd_toEndOf="@id/fs_message_detail"
        app:layout_constraintStart_toStartOf="@id/fs_message_detail"
        app:layout_constraintTop_toTopOf="@id/fs_v_top_safe_area" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/fs_message_detail"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/fs_activity_bg"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/fs_v_outside"
        app:layout_constraintEnd_toEndOf="@id/fs_v_outside"
        app:layout_constraintStart_toStartOf="@id/fs_v_outside"
        app:layout_constraintTop_toBottomOf="@id/fs_v_top_safe_area_2">

        <View
            android:layout_width="@dimen/dp_1"
            android:layout_height="match_parent"
            android:layout_marginVertical="@dimen/dp_16"
            android:alpha=".1"
            android:background="#D8D8D8"
            app:layout_constraintStart_toStartOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/fs_tv_detail_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:importantForAccessibility="no"
            android:padding="@dimen/dp_10"
            android:text="@string/fs_close"
            android:textColor="@color/color_999999"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.hjq.shape.layout.ShapeLinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginHorizontal="@dimen/dp_15"
            android:layout_marginBottom="@dimen/dp_18"
            android:orientation="vertical"
            android:paddingHorizontal="@dimen/dp_16"
            android:paddingVertical="@dimen/dp_14"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/fs_tv_detail_back"
            app:shape_radius="@dimen/dp_10"
            app:shape_solidColor="@color/color_333333">

            <TextView
                android:id="@+id/fs_tv_detail_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textStyle="bold"
                tools:text="消息标题消息标题消息标题消息标题消消息标题消息标题消息标题消息标题" />

            <TextView
                android:id="@+id/fs_tv_detail_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/dp_10"
                android:textColor="@color/white_transparent_40"
                android:textSize="@dimen/size_12"
                tools:text="2025-10-17 10:34:55" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:alpha=".1"
                android:background="#D8D8D8" />

            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/fs_tv_detail_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white_transparent_60"
                    android:textSize="@dimen/size_14"
                    tools:text="这是消息内容这是消息内容这是消息内容这是消息内容这是消息内容这是消息内容这是消息内容这是消息内容这是消息内容这是消息内容这是消息内容这是消息内容这是消息内容这是消息内容这是消息内容这是消息内容这是消息内容这是消息内容这是消息内容这是消息内容这是消息内容这是消息内容这是消息内容这是消息内容这是消息内容这是消息内容这是消息内容这是消息内容这是消息内容这是消息内容这是消息内容这是消息内容这是消息内容这是消息内容这是消息内容这是消息内容这是消息内容这是消息内容这是消息内容这是消息内容这是消息内容这是消息内容这是消息内容这是消息内容这是消息内容这是消息内容这是消息内容这是消息内容" />
            </androidx.core.widget.NestedScrollView>
        </com.hjq.shape.layout.ShapeLinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:id="@+id/fs_v_top_safe_area"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/fs_activity_bg"
        app:layout_constraintEnd_toEndOf="@id/fs_message_root"
        app:layout_constraintStart_toStartOf="@id/fs_message_root"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/fs_v_start_safe_area"
        android:layout_width="@dimen/dp_45"
        android:layout_height="match_parent"
        android:background="@color/fs_activity_bg"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/fs_message_root"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/fs_activity_bg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/fs_v_outside"
        app:layout_constraintHorizontal_weight="73"
        app:layout_constraintStart_toEndOf="@id/fs_v_start_safe_area"
        app:layout_constraintTop_toBottomOf="@id/fs_v_top_safe_area"
        tools:translationX="0dp">

        <ImageView
            android:id="@+id/fs_iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:importantForAccessibility="no"
            android:padding="@dimen/dp_10"
            android:src="@drawable/fs_right_back"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/fs_tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/fs_my_message"
            android:textColor="@color/white"
            android:textSize="@dimen/size_15"
            app:layout_constraintBottom_toBottomOf="@id/fs_iv_back"
            app:layout_constraintStart_toEndOf="@id/fs_iv_back"
            app:layout_constraintTop_toTopOf="@id/fs_iv_back" />

        <TextView
            android:id="@+id/fs_tv_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/fs_show_latest_100"
            android:textColor="@color/fs_subtitle"
            android:textSize="@dimen/size_12"
            app:layout_constraintBottom_toBottomOf="@id/fs_tv_title"
            app:layout_constraintStart_toEndOf="@id/fs_tv_title"
            app:layout_constraintTop_toTopOf="@id/fs_tv_title" />

        <ImageView
            android:id="@+id/fs_iv_clear"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:importantForAccessibility="no"
            android:paddingHorizontal="@dimen/dp_15"
            android:src="@drawable/fs_icon_clear"
            app:layout_constraintBottom_toBottomOf="@id/fs_iv_back"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.scwang.smart.refresh.layout.SmartRefreshLayout
            android:id="@+id/fs_refresh"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/fs_iv_back"
            app:srlEnableLoadMore="false"
            app:srlEnableOverScrollBounce="true"
            app:srlEnableOverScrollDrag="true">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/fs_rv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:overScrollMode="never"
                android:scrollbars="none"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:itemCount="5"
                tools:listitem="@layout/fs_item_message_list" />
        </com.scwang.smart.refresh.layout.SmartRefreshLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>