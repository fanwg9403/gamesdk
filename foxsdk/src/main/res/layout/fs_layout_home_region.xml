<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="@dimen/dp_15"
    android:paddingTop="@dimen/dp_10">

    <ImageView
        android:id="@+id/fs_iv_gift"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:adjustViewBounds="true"
        android:background="@color/transparent"
        android:src="@mipmap/fs_block_gift_pack"
        app:layout_constraintDimensionRatio="98:55"
        app:layout_constraintEnd_toStartOf="@id/fs_iv_coin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/fs_iv_coin"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginHorizontal="@dimen/dp_7"
        android:layout_weight="1"
        android:adjustViewBounds="true"
        android:background="@color/transparent"
        android:padding="0dp"
        android:src="@mipmap/fs_block_fox_coin"
        app:layout_constraintDimensionRatio="98:55"
        app:layout_constraintEnd_toStartOf="@id/fs_iv_service"
        app:layout_constraintStart_toEndOf="@id/fs_iv_gift"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/fs_iv_service"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:adjustViewBounds="true"
        android:background="@color/transparent"
        android:padding="0dp"
        android:src="@mipmap/fs_block_service"
        app:layout_constraintDimensionRatio="98:55"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/fs_iv_coin"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
