<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/fs_v_top_safe_area"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/fs_activity_bg"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@id/fs_home_root"
        app:layout_constraintStart_toStartOf="@id/fs_home_root"
        app:layout_constraintTop_toTopOf="parent" />

    <FrameLayout
        android:id="@+id/fs_v_start_safe_area"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:background="@color/fs_activity_bg"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.scwang.smart.refresh.layout.SmartRefreshLayout
        android:id="@+id/fs_home_root"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/fs_activity_bg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/fs_v_outside"
        app:layout_constraintHorizontal_weight="4"
        app:layout_constraintStart_toEndOf="@id/fs_v_start_safe_area"
        app:layout_constraintTop_toBottomOf="@id/fs_v_top_safe_area"
        app:srlEnableLoadMore="false"
        app:srlEnableOverScrollBounce="true"
        app:srlEnableOverScrollDrag="true">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/fs_rv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:overScrollMode="never"
            android:scrollbars="none"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:itemCount="1"
            tools:listitem="@layout/fs_layout_home_user_info" />
    </com.scwang.smart.refresh.layout.SmartRefreshLayout>

    <View
        android:id="@+id/fs_v_outside"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toEndOf="@id/fs_home_root" />
</androidx.constraintlayout.widget.ConstraintLayout>