<?xml version="1.0" encoding="utf-8"?>
<com.hjq.shape.layout.ShapeConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dp_10"
    android:padding="@dimen/dp_12"
    app:shape_radius="@dimen/dp_10"
    app:shape_solidColor="@color/color_0fffffff">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/fs_rounded_image"
        android:layout_width="@dimen/dp_46"
        android:layout_height="@dimen/dp_61"
        android:padding="@dimen/dp_1"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:riv_corner_radius="@dimen/dp_8"
        tools:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/fs_tv_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_8"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/white"
        android:textSize="@dimen/size_15"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/fs_rounded_image"
        app:layout_constraintTop_toTopOf="@+id/fs_rounded_image"
        tools:text="@string/fs_starter_pack" />

    <com.hjq.shape.view.ShapeTextView
        android:id="@+id/fs_tv_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="@dimen/dp_5"
        android:maxLines="2"
        android:textColor="@color/color_ffb6b6b6"
        android:textSize="@dimen/size_12"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/fs_rounded_image"
        app:layout_constraintTop_toBottomOf="@id/fs_tv_title"
        tools:text="@string/fs_starter_pack" />

    <com.hjq.shape.view.ShapeTextView
        android:id="@+id/fs_shp_tv_on"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_8"
        android:gravity="center"
        android:paddingHorizontal="@dimen/dp_15"
        android:paddingVertical="4dp"
        android:text="申请圆梦"
        android:textColor="@color/white"
        android:textSize="@dimen/size_14"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fs_rounded_image"
        app:shape_radius="@dimen/dp_20"
        app:shape_solidColor="@color/color_ff009e5c" />

    <TextView
        android:id="@+id/fs_tv_price_ico"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="¥"
        android:textColor="#ffFFD787"
        android:textSize="@dimen/size_12"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/fs_shp_tv_on"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/fs_shp_tv_on" />

    <TextView
        android:id="@+id/fs_tv_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="6488.00"
        android:textColor="#ffFFD787"
        android:textSize="@dimen/size_15"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/fs_shp_tv_on"
        app:layout_constraintStart_toEndOf="@id/fs_tv_price_ico"
        app:layout_constraintTop_toTopOf="@id/fs_shp_tv_on" />

    <com.hjq.shape.layout.ShapeLinearLayout
        android:id="@+id/fs_cl_coin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_5"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="@id/fs_shp_tv_on"
        app:layout_constraintStart_toEndOf="@id/fs_tv_price"
        app:layout_constraintTop_toTopOf="@id/fs_shp_tv_on"
        app:shape_radius="4dp"
        app:shape_solidColor="#1aFFEAD1">

        <com.hjq.shape.view.ShapeImageView
            android:layout_width="14dp"
            android:layout_height="match_parent"
            android:padding="@dimen/dp_3"
            android:src="@mipmap/fs_icon_win_coin"
            app:shape_radiusInBottomStart="4dp"
            app:shape_radiusInTopStart="@dimen/dp_4"
            app:shape_solidColor="#ff5B5144" />

        <TextView
            android:id="@+id/fs_tv_coin_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_3"
            android:text="奖励1000狐币"
            android:textColor="#ffFF981B"
            android:textSize="@dimen/size_10" />
    </com.hjq.shape.layout.ShapeLinearLayout>
</com.hjq.shape.layout.ShapeConstraintLayout>