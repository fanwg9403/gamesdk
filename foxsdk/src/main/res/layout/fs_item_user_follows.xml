<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_60"
    android:layout_marginBottom="@dimen/dp_4">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/fs_iv_avatar"
        android:layout_width="@dimen/dp_40"
        android:layout_height="@dimen/dp_40"
        android:layout_marginStart="@dimen/dp_15"
        android:padding="@dimen/dp_1"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:riv_corner_radius="@dimen/dp_10"
        tools:src="@mipmap/ic_launcher" />

    <com.hjq.shape.view.ShapeView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/fs_iv_avatar"
        app:layout_constraintEnd_toEndOf="@+id/fs_iv_avatar"
        app:layout_constraintStart_toStartOf="@+id/fs_iv_avatar"
        app:layout_constraintTop_toTopOf="@+id/fs_iv_avatar"
        app:shape_radius="@dimen/dp_10"
        app:shape_strokeGradientCenterColor="#66FFFFFF"
        app:shape_strokeGradientEndColor="#00FFFFFF"
        app:shape_strokeGradientOrientation="bottomEndToTopStart"
        app:shape_strokeGradientStartColor="#00FFFFFF"
        app:shape_strokeSize="@dimen/dp_1" />

    <TextView
        android:id="@+id/fs_tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_15"
        android:textColor="@color/white"
        android:textSize="@dimen/size_14"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/fs_iv_avatar"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="我叫你好啊" />
</androidx.constraintlayout.widget.ConstraintLayout>