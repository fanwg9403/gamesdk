<?xml version="1.0" encoding="utf-8"?>
<com.hjq.shape.layout.ShapeConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="@dimen/dp_12"
    android:paddingTop="@dimen/dp_12"
    android:paddingBottom="@dimen/dp_6"
    app:shape_radius="@dimen/dp_10"
    android:layout_marginBottom="@dimen/dp_10"
    app:shape_solidColor="@color/color_0fffffff">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/fs_rounded_image"
        android:layout_width="@dimen/dp_42"
        android:layout_height="@dimen/dp_42"
        android:padding="@dimen/dp_1"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:riv_corner_radius="@dimen/dp_8"
        tools:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/fs_tv_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_8"
        android:layout_marginEnd="@dimen/dp_24"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/white"
        android:textSize="@dimen/size_15"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@id/fs_tv_fox_coin"
        app:layout_constraintStart_toEndOf="@+id/fs_rounded_image"
        app:layout_constraintTop_toTopOf="@+id/fs_rounded_image"
        tools:text="@string/fs_starter_pack" />

    <com.hjq.shape.view.ShapeTextView
        android:id="@+id/fs_tv_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_3"
        android:maxLines="1"
        android:ellipsize="end"
        android:textColor="@color/color_0ecd7d"
        app:layout_constraintTop_toBottomOf="@id/fs_tv_title"
        app:layout_constraintStart_toStartOf="@id/fs_tv_title"
        app:layout_constraintEnd_toEndOf="@id/fs_tv_title"
        android:textSize="@dimen/size_12"
        tools:text="@string/fs_starter_pack" />

    <TextView
        android:id="@+id/fs_tv_fox_coin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/size_16"
        android:textColor="@color/color_ffd787"
        tools:text="@string/fs_starter_pack"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/fs_tv_title"
        android:layout_marginTop="@dimen/dp_12"/>
    <View
        android:id="@+id/fs_view_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@id/fs_rounded_image"
        android:layout_marginTop="@dimen/dp_12"
        android:background="@color/color_1ad8d8d8"/>

    <com.hjq.shape.view.ShapeTextView
        android:id="@+id/fs_shp_tv_time"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_6"
        android:text="@string/fs_str_claim_and_copy"
        android:textColor="@color/color_ffb6b6b6"
        android:textSize="@dimen/size_12"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fs_view_line"/>

</com.hjq.shape.layout.ShapeConstraintLayout>